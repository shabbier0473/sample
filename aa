pipeline{
    agent { label 'maven' } 
    parameters{
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'origin/master', name: 'BRANCH', type: 'PT_BRANCH'
        gitParameter name: 'TAG',type: 'PT_TAG', selectedValue: 'NONE'
    }
    stages{
        stage('validate'){
            tools { maven "MAVEN_HOME" }
            steps{
                sh 'mvn validate'
            }
            
        }
        stage('compile'){
            when { expression {GIT_BRANCH == 'origin/master'  }
            steps {
                build job: 'compile' ,parameters: [string(name:'work',value: '/home/maven/workspace/mainpipeline')]
            }
            
        }
        stage{
            steps{
                build job:'test' ,parameters:[string (name:'work',value: '/home/maven/workspace/mainpipeline')]
            }
        }
    }
}    
